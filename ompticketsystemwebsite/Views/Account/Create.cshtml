@model TicketSystem.DbLib.Entities.TicketUser

@{
    ViewBag.Title = "新增";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msg = TempData["Msg"];
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>新增 <small>TicketUser</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { id = "demo-form2", @class = "form-horizontal form-label-left" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.Userid, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.Userid, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", required = "required", placeholder = "輸入帳號" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", required = "required", placeholder = "輸入姓名" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", placeholder = "輸入部門" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", placeholder = "輸入職稱" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", type = "password", required = "required", placeholder = "輸入密碼" } })
                        </div>
                    </div>

                        <div class="ln_solid"></div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <input type="submit" value="新增" class="btn btn-success" />
                            </div>
                        </div>
                }
            </div>
            @if (msg != null)
            {
                <script type="text/javascript">
                    var message = @Html.Raw(Json.Encode(msg));
                    alert(message);
                </script>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("回列表", "AccountManager")
</div>
